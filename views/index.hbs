<div>
    {{#if products.length}}
        <div class="d-flex flex-wrap mb-5">
            {{#each products}}
                <div class="card m-2">
                    <img src="{{image}}" class="card-img-top object-fit-cover" style="max-height: 13rem; object-fit: cover;" alt="course img">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="ellipsis-line two">{{description}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0 text-muted fs-5">{{convertDate createdAt}}</p>
                        <p class="mb-0 text-muted text-end fs-5">{{price}}.00$</p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group btn-group-sm">
                            <a class="btn btn-outline-dark" href="/product/{{_id}}">more</a>
							{{#if @root.token}}
								{{#ifequal user_id @root.userId}}
									<a class='btn btn-outline-warning' href="/edit-product/{{_id}}">Edit</a>
                                    <form action="/delete-product/{{_id}}" method="post" class='btn btn-outline-danger'>
									    <button type='submit'>Delete</button>
                                    </form>
								{{/ifequal}}
							{{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>Products not found </p>
    {{/if}}
    <style>
        .card.m-2 {
            width: calc(25% - 1rem);
        }
        form.btn.btn-outline-danger {
            margin: 0;
        }
        form.btn.btn-outline-danger button {
            background: none;
            border: none;
            color: #dc3545;
        }
        form.btn.btn-outline-danger button:hover {
            color: white;
        }
    </style>
</div>